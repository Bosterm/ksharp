
<?php
$translate = $this->plugin('translate');
$prevText = $translate('Prev: ');
$nextText = $translate('Next: ');
?>


<?php if ($prevPage || $nextPage): ?>

    <div class="site-page-pagination">

        <div class="prev-page">
            <? if ($prevPage){
                $prevTitle = $prevPage->title();
                echo $this->hyperlink($prevText, $prevPage->siteUrl());
                echo $this->hyperlink($prevTitle, $prevPage->siteUrl());
            }?>
        </div>

        <div class="next-page">
        <?php  if ($nextPage){
            $nextTitle = $nextPage->title();
            echo $this->hyperlink($nextText, $nextPage->siteUrl());
            echo $this->hyperlink($nextTitle, $prevPage->siteUrl());
        }

        ?>
        </div>
    </div>
<?php endif; ?>